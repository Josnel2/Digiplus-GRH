            },
            "url": {
              "raw": "{{base_url}}/api/users/badgeages/scanner/",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "badgeages", "scanner", ""]
            }
          }
        },
        {
          "name": "POST - Scanner QR Code (Départ)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
