            "body": {
              "mode": "raw",
              "raw": "{\n  \"code_qr\": \"{{code_unique}}\",\n  \"type\": \"depart\",\n  \"latitude\": 48.8566,\n  \"longitude\": 2.3522\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/badgeages/scanner/",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "badgeages", "scanner", ""]
            }
          }
        },
        {
          "name": "GET - Badgeages du Jour",
          "request": {
